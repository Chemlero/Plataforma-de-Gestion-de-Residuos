    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
    VistaPreviaReporte ventanaVistaPreviaReporte = new VistaPreviaReporte(
    txtUbicacion.getText(), 
    txtCodigoPostal.getText(), 
    (Integer) spnContenedores.getValue(), 
    txtIncidencias.getText(), 
    CombEstadonEnvios.getSelectedItem().toString(), 
    (ImageIcon) lblImagen.getIcon()
);

// Mostrar la ventana antes de cerrar la actual
ventanaVistaPreviaReporte.setVisible(true);
this.dispose(); // Cierra la ventana actual después de abrir la vista previa

        
    this.dispose(); 
    }                                          

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        Inicio ventanaInicio = new Inicio(); // Crea una nueva instancia de la ventana Inicio
    ventanaInicio.setVisible(true); // Muestra la ventana Inicio
    this.dispose();
    }                                           

