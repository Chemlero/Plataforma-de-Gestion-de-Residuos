    private void mostrarImagen() {
    if (reporteImagen != null && reporteImagen.exists()) {
        ImageIcon icon = new ImageIcon(reporteImagen.getAbsolutePath());
        lblImagenReporte.setIcon(new ImageIcon(icon.getImage().getScaledInstance(
    lblImagenReporte.getWidth(), lblImagenReporte.getHeight(), java.awt.Image.SCALE_SMOOTH
    )));

    }
}
